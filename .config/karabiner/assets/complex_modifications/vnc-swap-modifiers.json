{
  "title": "Remap modifiers in TigerVNC VNC Viewer",
  "rules": [
    {
      "description": "Left Command to Control",
      "manipulators": [
	{
	  "type": "basic",
	  "from": {
	    "key_code": "left_command",
	    "modifiers": {
	      "optional": ["any"]
	    }
	  },
	  "to": [
	    {
	      "key_code": "left_control"
	    }
	  ],
	  "conditions": [
	    {
	      "type": "frontmost_application_if",
	      "bundle_identifiers": [
		"^com.tigervnc.tigervnc"
	      ]
	    }
	  ]
	}
      ]
    },
    {
      "description": "Left Option to Command (Meta/Alt)",
      "manipulators": [
	{
	  "type": "basic",
	  "from": {
	    "key_code": "left_option",
	    "modifiers": {
	      "optional": ["any"]
	    }
	  },
	  "to": [
	    {
	      "key_code": "left_command"
	    }
	  ],
	  "conditions": [
	    {
	      "type": "frontmost_application_if",
	      "bundle_identifiers": [
		"^com.tigervnc.tigervnc"
	      ]
	    }
	  ]
	}
      ]
    },
    {
      "description": "Command-_ to Control-_",
      "manipulators": [
	{
	  "type": "basic",
	  "from": {
	    "key_code": "hyphen",
	    "modifiers": {
	      "mandatory": ["command"],
	      "optional": ["any"]
	    }
	  },
	  "to": [
	    {
	      "key_code": "hyphen",
	      "modifiers": ["control"]
	    }
	  ],
	  "conditions": [
	    {
	      "type": "frontmost_application_if",
	      "bundle_identifiers": [
		"^com.tigervnc.tigervnc"
	      ]
	    }
	  ]
	}
      ]
    },
    {
      "description": "Command-? to Control-?",
      "manipulators": [
	{
	  "type": "basic",
	  "from": {
	    "key_code": "slash",
	    "modifiers": {
	      "mandatory": ["command"],
	      "optional": ["any"]
	    }
	  },
	  "to": [
	    {
	      "key_code": "slash",
	      "modifiers": ["control"]
	    }
	  ],
	  "conditions": [
	    {
	      "type": "frontmost_application_if",
	      "bundle_identifiers": [
		"^com.tigervnc.tigervnc"
	      ]
	    }
	  ]
	}
      ]
    }
  ]
}
